<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Servlet Sample</display-name>

    <servlet-mapping>
        <servlet-name>ServletSample</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletSample</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/jsp-tags-servlet.xml</param-value>
        </init-param>
    </servlet>

    <jsp-config>
        <taglib>
            <taglib-uri>http://localhost:8080/tags</taglib-uri>
            <taglib-location>/WEB-INF/tags/tag_library.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>